{
  "compilerOptions": {
    "target": "ES2017",
    "module": "ES2015",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "declaration": true,
    "declarationMap": true
  },
  "include": [
    "__test__/**/*.ts",
    "src/**/*.ts",
    "jest.config.js",
    "bundlib.config.mjs"
  ],
  "exclude": [
    "node_modules/**"
  ]
}
