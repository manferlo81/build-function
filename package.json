{
  "name": "build-function",
  "version": "0.1.0",
  "description": "The way to describe and build simple functions using JSON",
  "keywords": [
    "build",
    "function",
    "json"
  ],
  "main": "dist/build.cjs.js",
  "module": "dist/build.es.js",
  "browser": "dist/build.umd.js",
  "types": "types/index.d.ts",
  "typings": "types/index.d.ts",
  "bundlib": {
    "name": "buildFunc",
    "min": "browser",
    "globals": {
      "object-hash": "objectHash"
    }
  },
  "scripts": {
    "dev": "bundlib -dw",
    "build": "bundlib -d",
    "test": "jest --color -w 3",
    "watch": "npm test -- --watch-all",
    "clean": "rimraf dist types coverage node_modules/.cache/bundlib node_modules/.cache/jest",
    "lint": "eslint src/**/*.ts __test__/**/*.ts",
    "prerelease": "npm run clean && npm run lint && npm test && npm run build",
    "release": "standard-version"
  },
  "dependencies": {
    "object-hash": "^2.0.1"
  },
  "devDependencies": {
    "@types/jest": "^24.9.0",
    "@types/node": "^13.1.8",
    "@types/object-hash": "^1.3.1",
    "@typescript-eslint/eslint-plugin": "^2.17.0",
    "@typescript-eslint/parser": "^2.17.0",
    "bundlib": "^0.14.1",
    "chokidar": "^3.3.1",
    "eslint": "^6.8.0",
    "husky": "^4.2.0",
    "jest": "^25.1.0",
    "rimraf": "^3.0.0",
    "standard-version": "^7.1.0",
    "ts-jest": "^25.0.0",
    "typescript": "^3.7.5"
  },
  "files": [
    "dist",
    "types"
  ],
  "author": {
    "name": "Manuel Fernandez",
    "email": "manferlo81@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/manferlo81/build-function.git"
  },
  "bugs": {
    "url": "https://github.com/manferlo81/build-function/issues"
  },
  "homepage": "https://github.com/manferlo81/build-function#readme",
  "license": "MIT"
}
